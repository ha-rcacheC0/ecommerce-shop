<div class="container">
  <div>
    <div class="bg-neutral rounded-2xl p-6 flex flex-col  mx-auto w-3/5 justify-center items-center">
      <h1 class="text-3xl mb-3">Login</h1>
      <% if(messages.length>0) {%> <% if(messages == "User Registered Successfully") { %>

      <div id="messagesArea" class="alert alert-success">
        <% } else { %>
        <div id="messagesArea" class="alert alert-danger">
          <% } %> <%= messages%>
        </div>
        <%}%>

        <form action="" method="post" class="flex w-3/5 gap-4 flex-wrap justify-center">
         
            <label for="email" class="input input-bordered input-lg flex items-center gap-2">Email
            <input
              type="email"
              class="grow"
              id="email"
              name="email"
              required
            />
            </label>
            <label for="password" class="input input-bordered input-lg flex items-center gap-2">Password
            <input
              type="password"
              class="grow"
              id="password"
              name="password"
              required
            />
            </label>
          
          <div class="mb-3 ">
            Don't Have an Account? <a href="/user/register" class="text-blue-500 underline"> Register Here</a>
          </div>

          <button id="login-btn" type="submit" class="btn btn-primary">
            Login <i class="fa-solid fa-lg fa-right-to-bracket"></i>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>