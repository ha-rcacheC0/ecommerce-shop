enum Role {
  USER
  MANAGER
  ADMIN
}

model Product {
  id           Int             @id
  title        String
  description  String?
  image        String          @default("placeholder")
  casePrice    Decimal
  inStock      Boolean
  package      Int[]
  effects      EffectStrings[]
  ColorStrings ColorStrings[]
  Categories   Categories      @relation(fields: [categoriesId], references: [id])
  categoriesId String
  Brands       Brands          @relation(fields: [brandsId], references: [id])
  brandsId     String

  @@unique([id, categoriesId])
}

model EffectStrings {
  id      String    @id @default(cuid())
  name    Effects   @unique
  Product Product[]
}

model ColorStrings {
  id      String    @id @default(cuid())
  name    Colors    @unique
  Product Product[]
}

model Categories {
  id      String    @id @default(cuid())
  name    Category  @unique
  Product Product[]
}

model Brands {
  id      String    @id @default(cuid())
  name    Brand     @unique
  Product Product[]
}

model User {
  id             String       @id @default(cuid())
  role           Role         @default(USER)
  email          String       @unique
  hashedPassword String
  createdOn      DateTime?    @default(now())
  lastLogin      DateTime?
  profiles       UserProfile?
}

model UserProfile {
  id           String    @id @default(cuid())
  firstName    String?
  lastName     String?
  dateOfBirth  DateTime?
  streetNumber String?
  streetName   String?
  city         String?
  state        State?
  User         User      @relation(fields: [userId], references: [id])
  userId       String    @unique
}
